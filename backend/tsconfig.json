{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "../frontend"]
}